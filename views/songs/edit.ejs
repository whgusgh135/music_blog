<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit The Song</h1>
    <div style="width: 50%; margin: 0 auto;">
        <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="song[song]" value="<%= song.song %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="song[artist]" value="<%= song.artist %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="song[image]" value="<%= song.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="song[link]" value="<%= song.link %>">
            </div>
            <div class="form-group">
                <textarea style="height: 200px" class="form-control" name="song[description]"><%= song.description %></textarea>
            </div>
            <div style="width: 30%; margin: 0 auto;">
                <button class="btn btn-lg btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>